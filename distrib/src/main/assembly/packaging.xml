<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.1"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.1 http://maven.apache.org/xsd/assembly-1.1.1.xsd">
  <id>packaging</id>
  <formats>
    <format>tar.gz</format>
  </formats>

  <baseDirectory>crash-${project.version}</baseDirectory>

  <componentDescriptors>
    <componentDescriptor>src/main/assembly/distrib.xml</componentDescriptor>
  </componentDescriptors>

  <dependencySets>
    <dependencySet>
      <outputDirectory>/crash</outputDirectory>
      <unpack>true</unpack>
      <includes>
        <include>org.crashub:crash.packaging:tar.gz</include>
      </includes>
    </dependencySet>
    <dependencySet>
      <outputDirectory>/crash/lib</outputDirectory>
      <includes>
        <include>org.crashub:crash.plugins.mail</include>
        <include>javax.mail:mail</include>
        <include>org.crashub:crash.plugins.cron</include>
        <include>it.sauronsoftware.cron4j:cron4j</include>
      </includes>
    </dependencySet>
  </dependencySets>

</assembly>